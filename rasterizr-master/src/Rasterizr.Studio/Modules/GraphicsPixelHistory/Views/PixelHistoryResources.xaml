<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Rasterizr.Studio.Framework.Converters">
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    
    <Style x:Key="PixelColor" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <Style x:Key="ListItemResult" TargetType="ContentControl">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Margin" Value="0 0 5 0" />
    </Style>

    <Style x:Key="ListItemResultColor" TargetType="Border"
           BasedOn="{StaticResource PixelColor}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>

    <Style x:Key="PixelColorLabel" TargetType="Label">
        <Setter Property="Padding" Value="0 0 0 2" />
        <Setter Property="Foreground" Value="Gray" />
    </Style>
</ResourceDictionary>